{  
  "parser": "babel-eslint",
  "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
  },  
  "rules": {
      "spaced-comment": ["error", "always", {
        "line": {
          "markers": ["/"],
          "exceptions": ["-", "+"]
        },
        "block": {
          "markers": ["!"],
          "exceptions": ["*"],
          "balanced": true
        }
      }],
      "getter-return": ["error", { "allowImplicit": false }],
      "no-await-in-loop": "error",
      "no-template-curly-in-string": "error",
      "accessor-pairs": ["error", { "getWithoutSet": true }],
      "array-callback-return": "error",
      "block-scoped-var": "error",
      "curly": "error",
      "default-case": "error",
      "eqeqeq": ["error", "always", {"null": "ignore"}],
      "guard-for-in": "error",
      "no-implicit-globals": "error",
      "no-loop-func": "error",
      "require-await": "error",
      "camelcase": ["error", {"properties": "always", "ignoreDestructuring": true, "allow": ["^SAM_"]}],
      "func-name-matching" :"error",
      "no-duplicate-imports": ["error", { "includeExports": true }],
      "prefer-rest-params": "error",
      "prefer-spread": ["off", "windows"],
      "no-multi-assign": "error",
      "no-shadow": ["off", "windows"],
      "vars-on-top": ["off", "windows"],
      "no-invalid-this": ["off", "windows"]
  }
}